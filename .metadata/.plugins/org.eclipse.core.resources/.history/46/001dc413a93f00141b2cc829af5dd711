package rubik;

import java.util.Arrays;

public class Cubies {
	static char[][] A =new char[][] {
			
			{'R', 'Y', 'G'},//0
			{'Y', 'G'},		//1
			{'O', 'Y','G'},	//2
			
			{'R', 'G'},		//3
			{'G'},			//4 important!
			{'O', 'G'},		//5
			
			{'R', 'W', 'G'},//6 
			{'G', 'W'},		//7 important!
			{'G', 'W','O'}	//8
	};
	static char[][] B =new char[][] {
			
			{'Y', 'R',},	//0
			{'Y'},			//1 important!
			{'Y', 'O'},		//2
			
			{'R'},			//3 important!
			{},				//4 important!
			{'O'},			//5 important!
			
			{'R', 'W'},		//6 
			{'W'},			//7 important!
			{'O','W'}		//8
	};
	static char[][] C =new char[][] {
			
			{'R', 'B', 'Y'},//0
			{'Y', 'B'},		//1 
			{'Y', 'B', 'O'},//2
			
			{'R', 'B'},		//3 
			{'B'},			//4 important!
			{'O', 'B'},			//5 
			
			{'R', 'B','W'},		//6 
			{'B','W'},			//7 important!
			{'B','W','O'}		//8
	};
	public static void makeCube(String cubeString, char[][] left, char[][] middle, char[][] right){
		System.out.println(cubeString);
		left = new char[][] {
				{cubeString.charAt(6), cubeString.charAt(11), cubeString.charAt(11)}, 	//A0
				{cubeString.charAt(20), cubeString.charAt(19)},							//A1
				{cubeString.charAt(35), cubeString.charAt(29), cubeString.charAt(28)},	//A2
				
				{cubeString.charAt(3),cubeString.charAt(10)},							//A3
				{cubeString.charAt(18)},												//A4
				{cubeString.charAt(27), cubeString.charAt(38)},							//A5
				
				{cubeString.charAt(0), cubeString.charAt(50), cubeString.charAt(9)},	//A6
				{cubeString.charAt(17), cubeString.charAt(47)},							//A7
				{cubeString.charAt(26), cubeString.charAt(44), cubeString.charAt(41)}	//A8
		};
		middle = new char[][] {
				{cubeString.charAt(12), cubeString.charAt(7)},						 	//B0
				{cubeString.charAt(21)},												//B1
				{cubeString.charAt(30), cubeString.charAt(36)},							//B2
				
				{cubeString.charAt(4)},													//B3
				{},																		//B4
				{cubeString.charAt(39)},												//B5
				
				{cubeString.charAt(1), cubeString.charAt(51)},							//B6
				{cubeString.charAt(48)},												//B7
				{cubeString.charAt(42), cubeString.charAt(45)}							//B8
		};
		right = new char[][] {
				{cubeString.charAt(8), cubeString.charAt(14), cubeString.charAt(13)},	//C0
				{cubeString.charAt(22), cubeString.charAt(23)},							//C1
				{cubeString.charAt(31), cubeString.charAt(32), cubeString.charAt(37)},	//C2
				
				{cubeString.charAt(5), cubeString.charAt(15)},							//C3
				{cubeString.charAt(24)},												//C4
				{cubeString.charAt(40), cubeString.charAt(33)},							//C5
				
				{cubeString.charAt(2), cubeString.charAt(16), cubeString.charAt(52)},	//C6
				{cubeString.charAt(25), cubeString.charAt(49)},							//C7
				{cubeString.charAt(34), cubeString.charAt(46),cubeString.charAt(43)}	//C8
		};
		
	}
	public static void checkValid(char[][] left, char[][] middle, char[][] right){
		System.out.println(Arrays.equals(left, A));
		System.out.println(Arrays.equals(middle, B));
		System.out.println(Arrays.equals(right, C));
	}
}
